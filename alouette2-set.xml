<PropertyList include="alouette2-base.xml">

  <sim>

    <description>Alouette II (Yasim)</description>
    <flight-model>yasim</flight-model>
    <aero>alouette2</aero>

    <startup>
      <splash-texture>Aircraft/Alouette-II/Splash/alouette2-splash.png</splash-texture>
    </startup> 

    <model>
      <path archive="y">Aircraft/Alouette-II/Models/alouette.xml</path>
      <alouette>
        <state type="int">0</state>
        <engine type="float">0.0</engine>
        <rotor-step-deg type="float">-1.0</rotor-step-deg>
        <is_inside_view type="int">1</is_inside_view>
        <is_outside_view type="int">0</is_outside_view>
        <asi_mod type="bool">false</asi_mod>
      </alouette>
    </model>

  </sim>

</PropertyList>

