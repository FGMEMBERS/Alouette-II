<?xml version="1.0" encoding="UTF-8"?>

<!--
  ************************************************************************
  Alouettte 2 simulation config.

  ************************************************************************
-->

<PropertyList>

  <!--sim include="Aircraft/Alouette-2/views.xml"-->
      <sim include="views.xml">
    <author>BARANGER Emmanuel (3D), Reagan Thomas, Maik Justus/Jean Michel AUBERGER (FDM) Christian Thiriot "Patten" (news 3D, news textures, ...)</author>
    <status>alpha</status>
    <license>GPL v2</license>

    <fuel-fraction>0.8</fuel-fraction>

    <sound>
      <path>Aircraft/Alouette-II/Sounds/alouette-sound.xml</path>
    </sound>

    <model>
      <livery>
        <file type="string">default</file>
      </livery>
      <alouette>
        <state type="int">0</state>
        <engine type="float">0.0</engine>
        <rotor-step-deg type="float">-1.0</rotor-step-deg>
        <is_inside_view type="int">1</is_inside_view>
        <is_outside_view type="int">0</is_outside_view>
        <asi_mod type="bool">false</asi_mod>
      </alouette>
    </model>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int">0</int>  <!-- 0 immat -->
        <int type="int">0</int>  <!-- 1 immat -->
        <int type="int">0</int>  <!-- 2 immat -->
        <int type="int">0</int>  <!-- 3 immat -->
        <int type="int">0</int>  <!-- 4 immat -->
        <int type="int">0</int>  <!-- 5 immat -->
        <int type="bool">0</int> <!-- 6 smoke -->
        <int type="int">0</int>  <!-- 7 color -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <weight n="0">
      <name>Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="1">
      <name>Co-Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="2">
      <name>Right Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="3">
      <name>Middle Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="4">
      <name>Left Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="5">
      <name>Load</name>
      <weight-lb>0</weight-lb>
      <max-lb>800</max-lb>
    </weight>

    <help>
      <title>Alouette II - background and help</title>
      <line></line>
      <key>
        <name>d</name>
        <desc>Left door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Left windows</desc>
      </key>
      <key>
        <name>{</name>
        <desc>Start engines</desc>
      </key>
      <key>
        <name>}</name>
        <desc>Shutdown engines</desc>
      </key>
      <key>
        <name>R</name>
        <desc>Toggle rotor brake</desc>
      </key>
      <key>
        <name>r</name>
        <desc>Apply rotor brake</desc>
      </key>
      <key>
        <name>Ctrl d</name>
        <desc>Toggle S.A.S.</desc>
      </key>
      <key>
        <name>Ctrl e</name>
        <desc>Toggle C.A.S. (disengage for hovering)</desc>
      </key>
      <key>
        <name>Ctrl f</name>
        <desc>Auto hover</desc>
      </key>
    </help>

    <menubar include="Dialogs/alouette-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
    </engines>
    <electric>
        <battery-switch type="bool">0</battery-switch>
    </electric>
    <gear>
      <brake-parking>1</brake-parking>
    </gear>
    <rotor>
      <reltarget>1</reltarget>
      <maxreltorque>1</maxreltorque>
      <brake type="bool">0</brake>
    </rotor>
  </controls>

  <instrumentation>
    <gsdi>
      <serviceable type="bool">true</serviceable>
      <enabled type="bool">true</enabled>
    </gsdi>
  </instrumentation>

  <input>
    <!--keyboard include="Aircraft/Alouette-2/alouette-keyboard.xml"/> -->
    <keyboard include="alouette-keyboard.xml"/>
  </input>

  <rotors>
    <main>
      <rpm type="double">0</rpm>
      <cone-deg type="double">0</cone-deg>
      <cone1-deg type="double">0</cone1-deg>
      <cone2-deg type="double">0</cone2-deg>
      <cone3-deg type="double">0</cone3-deg>
      <cone4-deg type="double">0</cone4-deg>
    </main>
  </rotors>

  <!-- add dummy engine to make vacuum system happy -->
  <engines>
    <engine>
      <rpm type="double">500</rpm>
    </engine>
  </engines>

  <nasal>
    <doors>
      <file>Aircraft/Alouette-II/Nasal/doors.nas</file>
    </doors>
    <alouette>
      <file>Aircraft/Alouette-II/Nasal/alouette.nas</file>     
      <file>Aircraft/Alouette-II/Nasal/light.nas</file>
      <file>Aircraft/Alouette-II/Nasal/liveries.nas</file>
      <file>Aircraft/Alouette-II/Nasal/bladevisible.nas</file>
      <file>Aircraft/Alouette-II/Nasal/fcs-management.nas</file>

      <file>Aircraft/Generic/helicopter-fcs.nas</file>
    </alouette>
  </nasal>
<!--
    <garmin196>
      <texture-file>/Aircraft/Alouette-2/Models/Interior/Panel/Instruments/Garmin196/coque.png</texture-file>
    </garmin196>

    <garmin196>
      <file>Aircraft/Instruments-3d/garmin196/garmin196.nas</file>
    </garmin196>
-->
</PropertyList>

