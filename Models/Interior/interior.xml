<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>sieges</object-name>
    <object-name>souflets</object-name>
    <object-name>mancheG</object-name>
    <object-name>mancheD</object-name>
    <object-name>paloGG</object-name>
    <object-name>paloGD</object-name>
    <object-name>paloDG</object-name>
    <object-name>paloDD</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intverriere</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Alouette-II/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -4.136 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.344 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/Alouette-II/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -3.937 </x-m>
      <y-m>  0.392 </y-m>
      <z-m> -0.452 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Palonnier -->
  <!-- Pilote -->
  <animation>
    <type>rotate</type>
    <object-name>paloDG</object-name>
    <property>/controls/flight/rudder</property>
    <factor>10</factor>
    <center>
      <x-m> -4.463 </x-m>
      <y-m>  0.439 </y-m>
      <z-m> -0.834 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>paloDD</object-name>
    <property>/controls/flight/rudder</property>
    <factor>-10</factor>
    <center>
      <x-m> -4.463 </x-m>
      <y-m>  0.338 </y-m>
      <z-m> -0.834 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Copilote -->
  <animation>
    <type>rotate</type>
    <object-name>paloGG</object-name>
    <property>/controls/flight/rudder</property>
    <factor>10</factor>
    <center>
      <x-m> -4.463 </x-m>
      <y-m> -0.338 </y-m>
      <z-m> -0.834 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>paloGD</object-name>
    <property>/controls/flight/rudder</property>
    <factor>-10</factor>
    <center>
      <x-m> -4.463 </x-m>
      <y-m> -0.439 </y-m>
      <z-m> -0.834 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Manches -->
  <!-- Pilote -->
  <animation>
    <type>rotate</type>
    <object-name>mancheD</object-name>
    <property>/controls/flight/elevator</property>
    <factor>-10</factor>
    <center>
      <x-m> -4.318 </x-m>
      <y-m>  0.388 </y-m>
      <z-m> -0.804 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheD</object-name>
    <property>/controls/flight/aileron</property>
    <factor>-10</factor>
    <center>
      <x-m> -4.318 </x-m>
      <y-m>  0.388 </y-m>
      <z-m> -0.804 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Copilote -->
  <animation>
    <type>rotate</type>
    <object-name>mancheG</object-name>
    <property>/controls/flight/elevator</property>
    <factor>-10</factor>
    <center>
      <x-m> -4.318 </x-m>
      <y-m> -0.388 </y-m>
      <z-m> -0.804 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheG</object-name>
    <property>/controls/flight/aileron</property>
    <factor>-10</factor>
    <center>
      <x-m> -4.318 </x-m>
      <y-m> -0.388 </y-m>
      <z-m> -0.804 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Porte passager -->
  <animation>
    <type>rotate</type>
    <object-name>intvitreporteG</object-name>
    <property>/instrumentation/doors/passenger/position-norm</property>
    <factor> -175.0 </factor>
    <center>
      <x-m> -4.215 </x-m>
      <y-m> -0.819 </y-m>
      <z-m> -0.438 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Porte pilote -->
  <animation>
    <type>rotate</type>
    <object-name>intvitreporteD</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 175.0 </factor>
    <center>
      <x-m> -4.215 </x-m>
      <y-m>  0.819 </y-m>
      <z-m> -0.438 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>

