<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>magneto.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>Clutch.guard</object-name>
    <object-name>Clutch.switch</object-name>
  </animation>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>Clutch.guard</object-name>
  </effect>
  
  <animation>
    <type>noshadow</type>
    <object-name>Clutch.guard</object-name>
  </animation>  

  <animation>
    <type>pick</type>
    <object-name>Clutch.guard</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>controls/engines/engine/magnetoguard</property>
      </binding>
    </action>
  </animation>

<animation>
    <type>pick</type>
    <object-name>Clutch.switch</object-name>
    <object-name>fond</object-name>
    <action>
      <button>0</button>
      <binding>
        <condition>
          <equals>
            <property>controls/engines/engine/magnetoguard</property>
            <value>true</value>
          </equals>
        </condition>
                <command>property-toggle</command>
                <property>controls/engines/engine/magneto-switch</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>
            if (getprop("sim/model/alouette/state") == 0 and !getprop("controls/rotor/brake") and getprop("controls/electric/battery-switch") and getprop("controls/engines/engine/magneto-switch"))
                {
                alouette.engines(1);
                }
            else {
                alouette.engines(0);
                }
        </script>      
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
    </action>
    <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Magneto-switch</tooltip-id>
                <label>Magneto switch: %s</label>
                <mapping>on-off</mapping>
                <property>controls/engines/engine/magneto-switch</property>
            </binding>
    </hovered>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Clutch.guard</object-name>
    <property>controls/engines/engine/magnetoguard</property>
    <factor> -103 </factor>
    <center>
      <x-m>  0.001 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.013 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

<animation>
    <type>rotate</type>
    <object-name>Clutch.switch</object-name>
    <property>controls/engines/engine/magneto-switch</property>
        <factor> 50.0 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
<!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">START</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m> -0.020 </y-m>
      <z-m>  0.009 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>

